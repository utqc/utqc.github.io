nav {
  align-items: center;
  display: grid;
  grid-template-columns: 1fr minmax(auto, 700px) 1fr; }

.logosmall {
  /* scss + hugo-server breaks this when in combination */
  height: 40px;
  justify-self: end; }

.header {
  justify-content: space-evenly;
  display: flex; }

body {
  margin: 0;
  background-color: lightgrey; }

.paper {
  margin: 0 auto;
  max-width: 700px;
  padding: 100px 0;
  background-color: white; }

.viewable {
  padding: 0 0.2em; }

article {
  margin: 0 auto;
  width: 100%;
  max-width: 400px;
  text-align: justify; }

h1 {
  text-align: center; }
